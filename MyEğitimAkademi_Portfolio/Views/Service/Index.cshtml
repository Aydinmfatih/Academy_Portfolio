@model List<MyEğitimAkademi_Portfolio.Models.Service>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yetenek Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>Hizmet ID</th>
        <th>Hizmet Adı</th>
        <th>Hizmet Sil</th>
        <th>Hizmet Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.ServiceID</td>
    <td>@item.ServiceName</td>
    <td>
        <a href="#" class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal-@item.ServiceID">Sil</a>
    </td>
    <div class="modal fade" id="deleteModal-@item.ServiceID" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Kaydı Sil</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Bu kaydı silmek istediğinizden emin misiniz?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hayır</button>
                    <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Evet</a>
                </div>
            </div>
        </div>
    </div>
    <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a></td>
</tr>
    }
</table>
<a href="/Service/AddService/" class="btn btn-outline-primary">Yeni Hizmet Girişi</a>
