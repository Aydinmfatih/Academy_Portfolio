@model List<MyEğitimAkademi_Portfolio.Models.About>

<section id="home" class="w3l-banner pb-5">
    <div class="container pb-md-3">
        <div class="banner-wrapper text-center">
            <div class="">
                @foreach (var item in Model)
                {
                    <span class="text">@item.Introduction</span>
                    <h1 class="mb-4 title">
                        Merhaba, <span class="type-js"><span class="text-js">Ben @item.NameSurname</span></span><br>
                        @item.Title
                    </h1>
                    <p class="mx-lg-5">
                        <strong> Merhaba</strong>
                        @item.Description
                    </p>
                }

            </div>
            <div class="row">
                <div class="col-lg-8 mx-lg-auto col-md-10">
                    <img src="~/Templates/iportfolio-starter/assets/images/banner.png" alt="" class="img-fluid mt-lg-5 mt-3">
                </div>
            </div>
            <ul class="follow-social">
                <li><p>Beni Takip et</p></li>
                <li><a href="@ViewBag.linkedin" target="_blank"><span class="fa fa-linkedin"></span></a></li>
                <li><a href="@ViewBag.facebook" target="_blank"><span class="fa fa-facebook-official"></span></a></li>
                <li><a href="@ViewBag.twitter" target="_blank"><span class="fa fa-twitter"></span></a></li>
                <li><a href="@ViewBag.github" target="_blank"><span class="fa fa-github"></span></a></li>
            </ul>
        </div>
    </div>
</section>
